%nav.top-bar{"data-topbar" => true}
  %ul.title-area
    %li.name
      %h1
        = link_to("Bloc Wiki", root_path)
    %li.toggle-topbar.menu-icon
      %a{href: "#"}
        %span
          Menu
  -#- if current_user
    -#%ul.right
      -#%li
        -#= link_to("Create New Page", new_page_path)
  %section.top-bar-section.left
    - if current_user
      %ul.left
        %li
          = link_to("Create New Page", new_page_path)

  %section.top-bar-section.right
    - if current_user
      - if current_user && current_user.role?(:free)
        %ul.left
          %li
            = link_to("Upgrade", new_charge_path)
      %ul.left
        %li
          = link_to(current_user.name, edit_user_registration_path)
      %ul.right
        %li
          = link_to("Sign out", destroy_user_session_path, :method => :delete)
    - else
      %ul.left
        %li
          = link_to("Guest Account", "#")
      %ul.left
        %li
          = link_to("Sign In", new_user_session_path)
      %ul.left
        %li
          = link_to("Sign Up", new_user_registration_path)

