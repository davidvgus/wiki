= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    #epiceditor
      = f.text_area :content, id: "my-edit-area"
  .field
    = f.label :private
    = f.check_box :private
  .actions
    = f.submit 'Save'
